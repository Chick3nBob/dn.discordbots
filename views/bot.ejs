	  <link rel="stylesheet" href="https://discordbots.glitch.me/april">
	  <title>
	  <%= botInfo.name %>
	  </title>
	  <style>
		.center {
		  text-align: center;
		}
		
		body {
		  background: #7289DA;
		  color: black;
		}
		
			
		
  
		
		.botName {
		    /*ANIMATION*/
        -webkit-animation-name: colorchange; /* Safari 4.0 - 8.0 */
        -webkit-animation-duration: 1s; /* Safari 4.0 - 8.0 */
        animation-name: colorchange;
        animation-duration: 1s;
        animation-iteration-count: infinite;
        /* Safari 4.0 - 8.0 */
          @-webkit-keyframes colorchange {
            0%   {color: yellow;}
            25%  {color: red;}
            50%  {color: blue;}
            60%  {color: purple;}
            70%  {color: black;}
            90%  {color: green;}
            100% {color: yellow;}
          }
        /* Standard syntax */
          @keyframes h1 {
            0%   {color: yellow;}
            25%  {color: red;}
            50%  {color: blue;}
            60%  {color: purple;}
            70%  {color: black;}
            90%  {color: green;}
            100% {color: yellow;}
          }
		}
		
		.ex {
		  background: "#00000";
      color: white;
		  align: left
		}
		.bot-name {
      font-weight: bold;
      font-style: oblique;
      color: colorchange
      /*ANIMATION*/
        -webkit-animation-name: colorchange; /* Safari 4.0 - 8.0 */
        -webkit-animation-duration: 1s; /* Safari 4.0 - 8.0 */
        animation-name: colorchange;
        animation-duration: 1s;
        animation-iteration-count: infinite;
        /* Safari 4.0 - 8.0 */
          @-webkit-keyframes colorchange {
            0%   {color: yellow;}
            25%  {color: red;}
            50%  {color: blue;}
            60%  {color: purple;}
            70%  {color: black;}
            90%  {color: green;}
            100% {color: yellow;}
          }
        /* Standard syntax */
          @keyframes h1 {
            0%   {color: yellow;}
            25%  {color: red;}
            50%  {color: blue;}
            60%  {color: purple;}
            70%  {color: black;}
            90%  {color: green;}
            100% {color: yellow;}
          }
      }
      
		.botHelp {
		  
		}
			 @keyframes mover {
	  0%{
		  transform: translateY(-10px);
	  }
	  100%{
		  transform: translateY(5px);
	  }
  }
  
  @-webkit-keyframes mover {
	  0%{
		  transform: translateY(-10px);
	  }
	  100%{
		  transform: translateY(5px);
	  }
  }
			  .botAvatar {
		  border-radius: 50%;
		  box-shadow: 0px 3px 18px -3px black;
		  width: 200px;
		  margin-bottom: 2.5rem;
		  animation: mover 1s infinite alternate !important;
		}
	  </style>
	</head> 
	<body>
	  
	  <div class="ex">
		<br>
		<a href="/bots" class="btn btn-green">
		<h4>
		  &lt;&nbsp;&nbsp; Back to Bots
		</h4>
		</a>
      <br>
		<br>
	  </div>
	  <div class="jumbotron center container" style="color: black;box-shadow: 8px 5px 15px -2px black;"> 
		<img class="botAvatar" src="/api/discord/avatar/<%= botInfo.id %>">
      <p class="is-flex"><span class="botName"><% botInfo.name %></span>
        <b><p class="display-4"><%= botInfo.name %></p></b>
        </p>
      <p><b>
														  <%if (bot.users.get(botInfo.id).presence.status === 'idle') {%>                        
														<span class="badge badge-pill badge-pill badge-warning">IDLE</span> 
													<%}%>
													<%if (bot.users.get(botInfo.id).presence.status === 'online') {%>
      <span class="badge badge-pill badge-success">ONLINE</span>
        <%}%>
													
													<%if (bot.users.get(botInfo.id).presence.status === 'dnd') {%>
														<span class="badge badge-pill badge-danger">DND</span> 
													<%}%>
													<%if (bot.users.get(botInfo.id).presence.status === 'offline') {%>
														<span class="badge badge-pill badge-light">OFFLINE</span>
													<%}%>
        </p></b>
      
      
      <p>   
	<a class="btn btn-primary" href="https://discordapp.com/qpi/oauth2/authorize?client_id=<% botInfo.id %>&scope=bot">Invite</a>
      <a href="<%= botInfo.support%>" target="_blank"><button type="button" class=" btn btn-primary">
        Support
          </button>
        <a href="<%= botInfo.website%>" target="_blank"><button type="button" class=" btn btn-primary">
          Website
          </button>
        </a>
    </a>
      </p>
      <hr class="my-4">
  
		<div id='jumb'>
